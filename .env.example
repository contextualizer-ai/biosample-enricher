# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Note: .env is gitignored and should contain your real credentials

# =================================================================
# DATABASE CONNECTIONS (REQUIRED)
# =================================================================

# NMDC MongoDB Connection (metadata database - typically port 27778)
# Format: mongodb://username:password@host:port/?directConnection=true&authMechanism=DEFAULT&authSource=admin
NMDC_MONGO_CONNECTION="mongodb://ncbi_reader:your_password@localhost:27778/?directConnection=true&authMechanism=DEFAULT&authSource=admin"

# GOLD MongoDB Connection (metadata database - typically port 27778)  
# Format: mongodb://username:password@host:port/?directConnection=true&authMechanism=DEFAULT&authSource=admin
GOLD_MONGO_CONNECTION="mongodb://ncbi_reader:your_password@localhost:27778/?directConnection=true&authMechanism=DEFAULT&authSource=admin"

# HTTP Cache MongoDB Connection (cache database - typically port 27017)
# Format: mongodb://host:port/database
CACHE_MONGO_CONNECTION="mongodb://localhost:27017/http_cache"

# Fallback MongoDB URI (used when specific connections not available)
MONGO_URI="mongodb://localhost:27017/?directConnection=true"

# =================================================================
# API KEYS (OPTIONAL BUT RECOMMENDED)
# =================================================================

# Google Maps API Key (for elevation and reverse geocoding services)
# Get from: https://console.developers.google.com/
# Enable: Elevation API, Geocoding API
GOOGLE_MAIN_API_KEY="your_google_api_key_here"

# =================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# Log file path (leave empty for console-only logging)
LOG_FILE=""

# Enable verbose debug logging for specific modules
DEBUG_ELEVATION="false"
DEBUG_GEOCODING="false" 
DEBUG_CACHE="false"
DEBUG_ADAPTERS="false"

# =================================================================
# PROVIDER FEATURE FLAGS (OPTIONAL)
# =================================================================

# Enable/disable specific elevation providers
ELEVATION_ENABLE_GOOGLE="true"
ELEVATION_ENABLE_USGS="true"
ELEVATION_ENABLE_OSM="true"
ELEVATION_ENABLE_OPEN_TOPO_DATA="true"

# Enable/disable specific geocoding providers
GEOCODING_ENABLE_GOOGLE="true"
GEOCODING_ENABLE_OSM="true"

# =================================================================
# HTTP CACHE CONFIGURATION (OPTIONAL)
# =================================================================

# HTTP Cache Backend: 'sqlite' (default, recommended) or 'mongodb' (optional dev convenience)
CACHE_BACKEND="sqlite"

# Cache file/collection name
CACHE_NAME="cache/http"

# MongoDB Cache Configuration (only used if CACHE_BACKEND=mongodb)
# MONGO_URI - MongoDB connection URI for cache (required if using mongodb backend)
# MONGO_DB - Database name for cache (default: requests_cache)  
# MONGO_COLL - Collection name for cache (default: http)
# MONGO_URI="mongodb://localhost:27017"
# MONGO_DB="requests_cache"
# MONGO_COLL="http"

# Legacy cache configuration (kept for compatibility)
CACHE_ENABLED="true"
CACHE_TTL_HOURS="24"
CACHE_MAX_SIZE_MB="1000"

# =================================================================
# DEVELOPMENT AND TESTING (OPTIONAL)
# =================================================================

# Environment type: development, testing, production
ENVIRONMENT="development"

# Enable development features
DEV_MODE="false"

# Mock external API responses (for testing without API keys)
MOCK_APIS="false"

# Workspace directory for debug output
WORKSPACE_DIR="data/workspace"

# =================================================================
# LOGGING AND CACHE CONFIGURATION (OPTIONAL)
# =================================================================

# Log file location (default: biosample_enricher.log in project root)
LOG_FILE="logs/biosample_enricher.log"

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# =================================================================
# PERFORMANCE TUNING (OPTIONAL)
# =================================================================

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS="10"

# Request timeout in seconds
REQUEST_TIMEOUT_SECONDS="30"

# MongoDB connection timeout in milliseconds
MONGO_TIMEOUT_MS="5000"

# =================================================================
# METRICS AND SAMPLING (OPTIONAL)
# =================================================================

# Default sample sizes for metrics evaluation
DEFAULT_NMDC_SAMPLES="100"
DEFAULT_GOLD_SAMPLES="100"

# Schema analysis sample size
SCHEMA_SAMPLE_SIZE="50000"

# =================================================================
# SECURITY AND COMPLIANCE (OPTIONAL)
# =================================================================

# User agent string for HTTP requests
USER_AGENT="biosample-enricher/1.0"

# Rate limiting delays (seconds)
RATE_LIMIT_DELAY="1.0"

# Enable/disable telemetry collection
TELEMETRY_ENABLED="false"

# =================================================================
# EXAMPLE VALUES FOR REFERENCE
# =================================================================

# Example NMDC connection (replace with your actual credentials):
# NMDC_MONGO_CONNECTION="mongodb://ncbi_reader:your_actual_password@nmdc-db-host:27778/?directConnection=true&authMechanism=DEFAULT&authSource=admin"

# Example GOLD connection (replace with your actual credentials):
# GOLD_MONGO_CONNECTION="mongodb://ncbi_reader:your_actual_password@gold-db-host:27778/?directConnection=true&authMechanism=DEFAULT&authSource=admin"

# Example Google API key (get from Google Cloud Console):
# GOOGLE_MAIN_API_KEY="AIzaSyBVWaKrjvy3MaLQaLBG6nGWJEYaINKJa-U"

# =================================================================
# NOTES
# =================================================================

# 1. Never commit your actual .env file to version control
# 2. Port 27778 is typically used for metadata databases (NMDC/GOLD)
# 3. Port 27017 is typically used for the HTTP cache database
# 4. Google API keys should have appropriate usage restrictions
# 5. MongoDB connection strings should use appropriate authentication
# 6. Consider using connection pooling for production deployments